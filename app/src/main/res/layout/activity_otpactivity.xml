<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".OTPActivity">

  <ImageView
      android:layout_width="@dimen/margin_100dp"
      android:layout_height="@dimen/margin_100dp"
      android:layout_marginTop="@dimen/margin_50dp"
      android:src="@drawable/ic_baseline_mobile_friendly_24"
      android:layout_gravity="center_horizontal"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Enter OTP to verify : "
      android:layout_marginLeft="@dimen/margin_20dp"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="@dimen/margin_50dp"
      android:textSize="@dimen/margin_20dp"
      />
   <LinearLayout
       android:layout_marginTop="@dimen/margin_40dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

     <EditText
         android:id="@+id/et1OTP"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:layout_marginLeft="@dimen/margin_20dp"
         />
     <EditText
         android:id="@+id/et2OTP"
         android:layout_weight="1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_10dp"
         android:layout_marginRight="@dimen/margin_10dp"/>
     <EditText
         android:id="@+id/et3OTP"
         android:layout_weight="1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginRight="@dimen/margin_10dp"
         />
     <EditText
         android:id="@+id/et4OTP"
       android:layout_weight="1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
     android:layout_marginRight="@dimen/margin_20dp"
       />
   </LinearLayout>
  <TextView
      android:id="@+id/tvResendOTP"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Resend"
      android:textStyle="bold"
      android:layout_marginTop="@dimen/margin_10dp"
      android:textColor="@color/green"
      android:textSize="@dimen/margin_15dp"
      android:layout_marginLeft="@dimen/margin_290dp"
      />

  <Button
      android:id="@+id/btnSubmitOTP"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Submit"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="@dimen/margin_30dp"
      android:textSize="@dimen/margin_20dp"
/>
</LinearLayout>